#include <SoftwareSerial.h>
#include <cactus_io_AM2302.h>

#define AM2302_PIN 8

const int pinPhoto = A0;
int raw = 0;
AM2302 dht(AM2302_PIN);

const int L1 = 3; 
const int L2 = 4; 
const int L3 = 5; 
const int L4 = 6;
const int L5 = 7;

void setup() {
  Serial.begin(9600);
  dht.begin();
  pinMode( pinPhoto, INPUT );

 pinMode(L1, OUTPUT); 
    pinMode(L2, OUTPUT); 
    pinMode(L3, OUTPUT); 
    pinMode(L4, OUTPUT);
    pinMode(L5, OUTPUT);
}

void loop() {
  dht.readHumidity();
  dht.readTemperature();
  raw = analogRead(pinPhoto);
  
  if (isnan(dht.humidity) || isnan(dht.temperature_C)) {
    return;
  }

    Serial.print(raw); Serial.print(" "); Serial.print(dht.temperature_C); Serial.print(" "); Serial.println(dht.humidity);
    
 digitalWrite(L1, LOW);
    digitalWrite(L2, HIGH);
    digitalWrite(L3, LOW);
    digitalWrite(L4, HIGH);
    digitalWrite(L5, LOW);

    delay(500);

 digitalWrite(L1, HIGH);
 digitalWrite(L2, LOW);
    digitalWrite(L3, HIGH);
    digitalWrite(L4, LOW);
    digitalWrite(L5, HIGH);
    
    delay(500);
    
}